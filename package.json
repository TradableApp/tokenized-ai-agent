{
  "name": "tokenized-ai-agent",
  "version": "1.0.0",
  "description": "Token-gated AI agent using Oasis ROFL. This repo connects an ERC-20 token to off-chain logic execution via a secure enclave (TDX), enabling trusted AI inference and verifiable on-chain payments.",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "deploy": "npx hardhat run scripts/deploy.js --network sapphire-testnet",
    "deploy:localnet": "ENV_FILE=.env.localnet npx hardhat run scripts/deploy.js --network sapphire-localnet",
    "deploy:testnet": "ENV_FILE=.env.testnet  npx hardhat run scripts/deploy.js --network sapphire-testnet",
    "deploy:mainnet": "ENV_FILE=.env.mainnet  npx hardhat run scripts/deploy.js --network sapphire"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TradableApp/tokenized-ai-agent.git"
  },
  "keywords": [
    "Oasis",
    "ROFL",
    "TEE",
    "smart-contracts",
    "token-gated",
    "tokenized",
    "AI-agent"
  ],
  "author": "Tradable",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/TradableApp/tokenized-ai-agent/issues"
  },
  "homepage": "https://github.com/TradableApp/tokenized-ai-agent#readme",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@oasisprotocol/sapphire-contracts": "^0.2.14",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "chai": "^4.2.0",
    "dotenv": "^17.0.1",
    "hardhat": "^2.25.0",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.0.0",
    "solhint": "^6.0.0",
    "solidity-coverage": "^0.8.16"
  }
}
